@model IEnumerable<SmartRes_Official2019Data.OrderList>


<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Hover Data Table</h3>
            </div>
            <div class="box-body">
                <table class="table table-hover table-striped" id="my_list">
                    <thead>

                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.OrderDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.qty)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.amt)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.status)
                            </th>
                            @*<th>
                                    @Html.DisplayNameFor(model => model.customerID)
                                </th>*@


                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.OrderDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.qty)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.amt)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.status)
                                </td>


                                @if (item.status == "In Progress")


                                {

                                    <td>
                                        <span class="label label-success">
                                            @Html.DisplayFor(modelItem => item.status)
                                        </span>
                                    </td>
                                }


                                @*<td>
                                      @Html.DisplayFor(modelItem => item.customerID)
                                    </td>*@
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.InvoiceNo }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.InvoiceNo }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.InvoiceNo })
                                </td>
                            </tr>
                        }
                    </tbody>


                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
                    $('#my_list').dataTable(
                        {
                            dom: 'Bfrtip',
                            lengthMenu: [
                                [10, 25, 50, -1],
                                ['10 rows', '25 rows', '50 rows', 'Show all']
                            ],
                            buttons: [
                                'pageLength', 'csv', 'pdf', 'print'
                            ],
                            language: { search: "" },
                            select: true
                        }
                    );
                    $(".dataTables_filter input").addClass("search-input");
                    $(".dataTables_filter input").attr('placeholder', 'Search');
                    $('#my_list')
                        .removeClass('display')
                        .addClass('table table-striped table-hover');
</script>
