@model IEnumerable<SmartRes_Official2019Data.Residence>

@{
    ViewBag.Title = "Index";
}
<br />

<hr /><p>@Html.ActionLink("Add Residence", "Create")</p><hr />

@using (Html.BeginForm())
{

    <p style="text-align:right;">
        Find : @Html.TextBox("SearchString", "", new { placeholder = "Search by name, address" })
        <input type="submit" value="Search" />
    </p>

}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-block">
                <h4 class="card-title">Res Availability</h4>

                <div class="table-overflow">
                    <table class="table table-bordered table-hover table-sm">
                        <thead>
                            <tr class="table-header-row">

                                <th>
                                    @Html.DisplayNameFor(model => model.University.UniversityName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ResName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ResAddress)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Capacity)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Gender_Allocation)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ResidentPhoto)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.University.UniversityName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ResName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ResAddress)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Capacity)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Gender_Allocation)
                                    </td>
                                    <td>
                                        @if (item.ResidentPhoto != null)
                                        {
                                            var base64 = Convert.ToBase64String(item.ResidentPhoto);
                                            var ImgSource = string.Format("data:image/gif;base64,{0}", base64);
                                            <img src="@ImgSource" width="100" height="100" />
                                        }
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.ResId })
                                        @Html.ActionLink("Details", "Details", new { id = item.ResId })
                                        @Html.ActionLink("Delete", "Delete", new { id = item.ResId })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
    </div>



