@model SmartRes_Official2019Data.Student

@{
    /**/

    ViewBag.Title = "Create";
    var msg = TempData["message"] ?? string.Empty;
}


<script>
    var message = '@msg';
    if (message)
        alert(message);
</script>

<div class="col-md-10">
    <div class="card">
        <div class="card-heading border bottom">
            <h4 class="card-title">Complete Profile</h4>
        </div>
        <div class="card-block">
            <div class="mrg-top-40">
                @using (Html.BeginForm("Create", "Students", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                        <div class="form-group">
                            @Html.LabelFor(model => model.StudentNumber, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.StudentNumber, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.StudentNumber, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">



                            <th>@Html.LabelFor(model => model.UserPhoto)</th>
                            <div class="col-md-8">
                                <td>

                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-file-picture-o"></i>
                                        </div>
                                        <input type="file" name="filelist" accept=".jpeg,.jpg,.png" onchange="readURL(this);" class="form-control" required="required" />
                                    </div>
                                </td>

                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Next" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }
               
            </div>
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>






