@model SmartRes_Official2019Data.Check_In
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-heading border bottom">
                <h4 class="card-title">Check In</h4>
            </div>
            <div class="card-block">
                <div class="mrg-top-40">
                    <div class="row">
                        <div class="col-md-8 ml-auto mr-auto">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                
                                    <hr />

                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })



                                    <div class="form-group row">
                                        <div class="col-lg-6">
                                            <label>Studen Number:</label>
                                            @Html.DropDownList("StudId", null, "--- Please Select ---", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.StudId, "", new { @class = "text-danger" })

                                        </div>

                                        <div class="col-lg-6">
                                            <label>Resident:</label>
                                            @Html.DropDownList("ResId", null, "--- Please Select ---", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.ResId, "", new { @class = "text-danger" })

                                        </div>
                                    </div>


                                    <div class="kt-portlet__foot">
                                        <div class="kt-form__actions">
                                            <div class="row">
                                                <div class="col-lg-6">
                                                    <button type="submit" class="btn btn-primary">Check In</button>
                                                    <button type="reset" class="btn btn-secondary">Cancel</button>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                         
                            }
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

                        <div>
                            @Html.ActionLink("Back to List", "Index")
                        </div>

                        @section Scripts {
                            @Scripts.Render("~/bundles/jqueryval")
                        }
