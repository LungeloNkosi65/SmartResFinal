@model SmartRes_Official2019Data.RegisterViewModel

@{
    Layout = null;
    ViewBag.Title = "Sign Up";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Sign Up</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">


    <link href="~/assets/AdminLTE/plugins/ionicons/css/ionicons.min.css" rel="stylesheet" />
    <link href="~/assets/AdminLTE/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/AdminLTE/dist/css/admin-lte.min.css" rel="stylesheet" />

</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="@Url.Action("Index", "Home")">Welcome to <b>SmartRes!</b></a>
        </div>
        <div class="login-box-body">
            <p class="login-box-msg">Sign up to start your session</p>
           @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
           {

            @*<h4>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

                Sign Up For A New Account
            </h4>*@
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @*@Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })*@
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                    </div>
                </div>




                <div class="form-group">
                    @*@Html.LabelFor(m => m.UsreType, new { @class = "col-md-2 control-label" })*@ 
                    <div class="col-md-10"> 
                       @Html.DropDownListFor(m => m.UsreType, new[] {
                   new SelectListItem (){ Text = "SAN Employee", Value ="SAN"},
                        new SelectListItem() { Text = "University Employee", Value = "Epmloyee" }},
                        "--Select Employee Type --", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UsreType, "", new { @class = "text-danger" })
                    </div>
                </div>
                @*<div class="form-group">
                        @Html.LabelFor(m => m.OTP, new { @class = "col-md-2 control-label" })
                        <div class="col-md-5">
                            @Html.EditorFor(m => m.OTP, new { @class = "form-control" })
                        </div>
                    </div>*@
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="Register" />
                    </div>
                </div>
           }
            <br />
            <br />
            @*<a href="#">I forgot my password</a><br>*@
            <a href="@Url.Action("Login", "Account")" class="text-center">Sign in</a>
        </div>
    </div>

    <script src="~/assets/AdminLTE/plugins/jquery/js/jQuery-2.1.4.min.js"></script>
    <script src="~/assets/AdminLTE/plugins/bootstrap-slider/js/bootstrap-slider.js"></script>
    <script src="~/assets/AdminLTE/plugins/jquery-validate/js/jquery.validate.js"></script>

</body>
</html>
