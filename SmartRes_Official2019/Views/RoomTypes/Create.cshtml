@model SmartRes_Official2019Data.RoomType

@{
    ViewBag.Title = "Room types";
}

    <div class="col-md-10">
        <div class="card">
            <div class="card-heading border bottom">
                <h4 class="card-title">Add Room Type</h4>
            </div>
            <div class="card-block">
                <div class="mrg-top-40">
            

                        @using (Html.BeginForm())
                             {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                @*<h4>RoomType</h4>*@
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.LabelFor(m => m.RmType, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-5">
                                        @Html.DropDownListFor(m => m.RmType, new[] {
                            new SelectListItem (){ Text = "Single", Value ="Single"},
                            new SelectListItem () { Text = "Double", Value ="Double"},
                            new SelectListItem() { Text = "Sharing", Value = "Sharing" }},

                            "--Select Gender Allocation--", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.RmType, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.NumbOcupants, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-5">
                                        @Html.EditorFor(model => model.NumbOcupants, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.NumbOcupants, "", new { @class = "text-danger" })
                                    </div>
                                </div>


                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <button type="submit" class="btn btn-success">
                                            <i class="icon-circle-arrow-right icon-large"></i> Create
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                  
                    </div>

                </div>
            </div>
            </div>
    



            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
