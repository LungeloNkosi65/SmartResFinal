@model SmartRes_Official2019Data.Cloths


<div class="col-md-10">
    <div class="card">
        <div class="card-heading border bottom">
            <h4 class="card-title">Add Cloths</h4>
        </div>
        <div class="card-block">
            <div class="mrg-top-40">
                @using (Html.BeginForm("Create", "Cloths", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="kt-portlet__body">

                        <hr />


                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                        <div class="form-group row">
                            <div class="col-lg-6">
                                <label>Clothing Item:</label>
                                @Html.EditorFor(model => model.cloth_Type, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.cloth_Type, "", new { @class = "text-danger" })

                            </div>

                            <div class="col-lg-6">
                                <label>Clothing Item Code:</label>
                                @Html.EditorFor(model => model.clothCode, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.clothCode, "", new { @class = "text-danger" })

                            </div>
                        </div>


                        <div class="form-group row">
                            <div class="col-lg-6">
                                <label>Image:</label>
                                @Html.ValidationMessageFor(model => model.cloth_image, "", new { @class = "text-danger" })

                                <input type="file" id="filelist" name="filelist" />
                            </div>


                        </div>
                        <div class="kt-portlet__foot">
                            <div class="kt-form__actions">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <button type="submit" class="btn btn-primary">Upload</button>
                                        <button type="reset" class="btn btn-secondary">Cancel</button>
                                    </div>

                                </div>
                            </div>

                        </div>

                    </div>
                }




            </div>
            </div>
        </div>
    </div>

            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
