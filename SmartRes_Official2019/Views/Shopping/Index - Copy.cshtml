@model IEnumerable<SmartRes_Official2019Data.Item>
@{
    ViewBag.Title = "Shopping";
    if (ViewBag.Department != null)
    {
        ViewBag.Title = ViewBag.Department.ToString();
        Layout = "~/Views/Shared/_ShopLayout.cshtml";

    }

}
<div class="col-md-6 col-lg-3 ftco-animate">
  <div class="product">
@foreach (var item in Model)
{
        <a href="#" class="img-prod">
        @if (item.Picture != null)
        {
            var base64 = Convert.ToBase64String(inArray: item.Picture);
            var imgSrc = string.Format(format: "data:image/gif;base64,{0}", arg0: base64);
            <img class="img-fluid" src="@imgSrc" alt="Colorlib Template">
            <span class="status">30%</span>
            <div class="overlay"></div>
        }
        </a>
        <div class="text py-3 pb-4 px-3 text-center">
            <h3><a href="#">@Html.DisplayFor(expression: modelItem => item.Name)</a></h3>
            <div class="d-flex">
                <div class="pricing">
                    <p class="price"><span class="mr-2 price-dc">@Html.DisplayFor(expression: modelItem => item.Price)</span><span class="price-sale">@Html.DisplayFor(expression: modelItem => item.Price)</span></p>
                </div>
            </div>
            <div class="bottom-area d-flex px-3">
                <div class="m-auto d-flex">
                    <a href="@Url.Action("Details", "Items", new { id = item.ItemCode })" class="add-to-cart d-flex justify-content-center align-items-center text-center">
                        <span><i class="ion-ios-menu"></i></span>
                    </a>

                    <a href="@Url.Action(actionName: "add_to_cart", controllerName: "Shopping", routeValues: new { id = item.ItemCode })" class="buy-now d-flex justify-content-center align-items-center mx-1">
                        <span><i class="ion-ios-cart"></i></span>
                    </a>
                   
                </div>
            </div>
        </div>
}
    </div>

</div>