

@model IEnumerable<SmartRes_Official2019Data.Medical_Info>

<div class="kt-portlet">

    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <h3 class="kt-portlet__head-title">
                Student Medical Information
            </h3>
        </div>
    </div>

    @if (User.IsInRole("Student"))
    {
        <h2> My Medical Info Details</h2>

    }
    else if (User.IsInRole("SystemAdmin"))
    {
        <h2>Medical Info</h2>
    }

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-block">
                    <h4 class="card-title">Cloths</h4>

                    <div class="table-overflow">
                        <table class="table table-bordered table-hover table-sm">
                            <thead>
                                <tr class="table-header-row">
                            <thead>

                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.StudentEmail)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Have_Med)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Med_Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Owner_Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Illness)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Illness_Description)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Chronic_Medication)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Chronic_Description)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Parent_Details)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Parent_Name)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.StudentEmail)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Have_Med)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Med_Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Owner_Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Illness)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Illness_Description)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Chronic_Medication)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Chronic_Description)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Parent_Details)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Parent_Name)
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Details","Medical_Info", new { id=item.MedId })" rel="tooltip" title="View" class="btn btn-info btn-simple btn-xs"><i class="fa fa-eye"> Details</i></a>
                                            <a href="@Url.Action("Edit","Medical_Info", new { id=item.MedId })" rel="tooltip" title="Edit" class="btn btn-success btn-simple btn-xs"><i class="fa fa-edit">Edit</i></a>
                                            <a href="@Url.Action("Delete", "Medical_Info", new { id = item.MedId })" rel="tooltip" title="Remove" class="btn btn-danger btn-simple btn-xs"><i class="fa fa-times">Delete</i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>




